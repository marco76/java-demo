<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>parent</artifactId>
        <groupId>java-demo</groupId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <packaging>war</packaging>
    <modelVersion>4.0.0</modelVersion>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.outputEncoding>UTF-8</project.build.outputEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <failOnMissingWebXml>false</failOnMissingWebXml>
    </properties>

    <artifactId>server</artifactId>

    <dependencies>

        <dependency>
            <groupId>java-demo</groupId>
            <artifactId>client</artifactId>
            <version>0.0.1-SNAPSHOT</version>
            <type>war</type>
        </dependency>

        <!-- https://mvnrepository.com/artifact/org.hibernate/hibernate-validator -->
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-validator</artifactId>
            <version>6.0.0.Alpha2</version>
        </dependency>
        <!-- comes with HV
        <dependency>
            <groupId>javax.validation</groupId>
            <artifactId>validation-api</artifactId>
             <version>2.0.0.Alpha2</version>
        </dependency>
        -->

        <!-- json-b -->
        <!-- comes with yasson -->
        <dependency>
            <groupId>javax.json.bind</groupId>
            <artifactId>javax.json.bind-api</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.eclipse</groupId>
            <artifactId>yasson</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.glassfish</groupId>
            <artifactId>javax.json</artifactId>
            <version>1.1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.hibernate.validator</groupId>
            <artifactId>hibernate-validator-cdi</artifactId>
            <version>6.0.0.Alpha2</version>
        </dependency>
      <!--
       ERROR : "WFLYCTL0412: Required services that are not installed:" => ["jboss.deployment.unit.\"ROOT.war\".WeldStartService"]}
        <dependency>
            <groupId>org.glassfish.soteria</groupId>
            <artifactId>soteria</artifactId>
            <version>1.0-m03-SNAPSHOT</version>
        </dependency>
        -->

        <!-- THIS HAS TO STAY IN THE LAST POSITION -->
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <version>7.0</version>
            <scope>provided</scope>
            <exclusions>
                <exclusion>
                    <groupId>javax.validation</groupId>
                    <artifactId>validation-api</artifactId>
                </exclusion>
            </exclusions>

        </dependency>

        <!-- These dependencies should be eliminated with the final version of Java EE and JSON-B -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.8.5</version>
        </dependency>

    </dependencies>

    <build>
        <finalName>ROOT</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.0.0</version>
            </plugin>
        </plugins>
    </build>


        <repositories>
            <!-- Needed for JSON-B API -->
            <repository>
                <id>java.net-Public</id>
                <name>Maven Java Net Snapshots and Releases</name>
                <url>https://maven.java.net/content/groups/public/</url>
            </repository>

            <!-- Needed for Yasson -->
            <repository>
                <id>yasson-snapshots</id>
                <name>Yasson Snapshots repository</name>
                <url>https://repo.eclipse.org/content/repositories/yasson-snapshots</url>
            </repository>
            <repository>
                <id>jboss-maven2-release-repository</id>
                <name>JBoss</name>
                <url>http://repository.jboss.org/nexus/content/groups/public-jboss/</url>
            </repository>

            <!-- used for soteria -->
            <repository>
                <snapshots>
                    <enabled>true</enabled>
                </snapshots>
                <id>bintray-snapshot</id>
                <name>libs-snapshot</name>
                <url>http://oss.jfrog.org/artifactory/libs-snapshot</url>
            </repository>
            </repositories>

</project>